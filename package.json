{
	"name": "vs-phpcompanion",
	"version": "3.0.0",
	"displayName": "PHP Companion",
	"description": "Create new PHP class, run tests, refactor, insert namespace, ...",
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"php",
		"class",
		"snippets",
		"refactor",
		"namespace",
		"test",
		"tdd",
		"phpunit"
	],
	"icon": "resources/icon.png",
	"author": "Fred Blanc <findel@free.fr>",
	"publisher": "blanc-frederic",
	"engines": {
		"vscode": "^1.75.0"
	},
	"extensionKind": [
		"ui",
		"workspace"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/blanc-frederic/vs-phpcompanion.git"
	},
	"activationEvents": [
		"onLanguage:php"
	],
	"main": "dist/extension",
	"contributes": {
		"commands": [
			{
				"command": "phpcompanion.newPHPClass",
				"category": "File",
				"title": "New PHP Class"
			},
			{
				"command": "phpcompanion.insertNamespace",
				"title": "Insert Namespace",
				"category": "PHP Companion",
				"when": "resourceLangId == php"
			},
			{
				"title": "Extract method",
				"command": "phpcompanion.extractMethod",
				"category": "Refactor",
				"when": "resourceLangId == php"
			},
			{
				"title": "Extract variable",
				"command": "phpcompanion.extractVariable",
				"category": "Refactor",
				"when": "resourceLangId == php"
			},
			{
				"title": "Inline code",
				"command": "phpcompanion.inlineCode",
				"category": "Refactor",
				"when": "resourceLangId == php"
			},
			{
				"title": "Run tests",
				"command": "phpcompanion.runTests",
				"category": "PHP Companion",
				"when": "resourceLangId == php || resourceScheme == phpcompanion"
			},
			{
				"title": "Open tests logs",
				"command": "phpcompanion.openLogs",
				"category": "PHP Companion",
				"when": "resourceLangId == php"
			}
		],
		"keybindings": [
			{
				"command": "phpcompanion.runTests",
				"key": "F9",
				"when": "!inDebugMode"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "phpcompanion.newPHPClass",
					"when": "explorerResourceIsFolder",
					"group": "navigation@7"
				}
			],
			"editor/context": [
				{
					"command": "phpcompanion.insertNamespace",
					"when": "resourceLangId == php"
				}
			],
			"editor/title": [
				{
					"command": "phpcompanion.runTests",
					"group": "navigation",
					"when": "resourceScheme == phpcompanion"
				}
			]
		},
		"snippets": [
			{
				"language": "php",
				"path": "./snippets/php.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "PHP Companion",
			"properties": {
				"phpcompanion.activate.createPHPFile": {
					"type": "boolean",
					"default": true,
					"description": "Add \"New PHP class\" command and menu in explorer menu"
				},
				"phpcompanion.activate.insertNamespace": {
					"type": "boolean",
					"default": true,
					"description": "Add \"Insert namespace\" command and menu for PHP files"
				},
				"phpcompanion.activate.refactor.extractMethod": {
					"type": "boolean",
					"default": true,
					"description": "Add \"Extract Method\" to Refactor menu for php files"
				},
				"phpcompanion.activate.refactor.extractVariable": {
					"type": "boolean",
					"default": true,
					"description": "Add \"Extract Variable\" to Refactor menu for php files"
				},
				"phpcompanion.activate.refactor.inlineCode": {
					"type": "boolean",
					"default": true,
					"description": "Add \"Inline code\" to Refactor menu for php files"
				},
				"phpcompanion.class.insertStrict": {
					"type": "boolean",
					"default": true,
					"description": "Insert 'declare(strict_types=1);' into generated classes"
				},
				"phpcompanion.class.composerJson": {
					"type": "string",
					"default": "composer.json",
					"description": "Path to composer.json from workspace rootdir"
				},
				"phpcompanion.class.vendor": {
					"type": "string",
					"default": null,
					"description": "Specifies default vendor if not extracted from composer.json"
				},
				"phpcompanion.class.detectTestCase": {
					"type": "boolean",
					"default": true,
					"description": "Extends PHPUnit TestCase for generated classes with \"Test\" suffix"
				},
				"phpcompanion.class.detectInterface": {
					"type": "boolean",
					"default": true,
					"description": "Default type to 'interface' for generated classes with \"Interface\" suffix"
				},
				"phpcompanion.class.detectTrait": {
					"type": "boolean",
					"default": true,
					"description": "Default type to 'trait' for generated classes with \"Trait\" suffix"
				},
				"phpcompanion.activate.runTests": {
					"type": "boolean",
					"default": true,
					"description": "Add \"Run tests\" commands and statusbar"
				},
				"phpcompanion.tests.script": {
					"type": "string",
					"default": "vendor/bin/phpunit",
					"description": "Command line to run tests (ex: \"vendor/bin/phpunit\", \"bin/phpunit\" or \"phpunit\")"
				},
				"phpcompanion.tests.scriptArguments": {
					"type": "array",
					"default": [
						"--colors=never",
						"--verbose"
					],
					"description": "Arguments for tests command line"
				}
			}
		}
	},
	"scripts": {
		"build": "esbuild extension.js --bundle --external:vscode --minify --platform=node --outfile=dist/extension.js"
	},
	"dependencies": {
		"esbuild": "^0.25.8",
		"php-parser": "^3.2.5"
	}
}
